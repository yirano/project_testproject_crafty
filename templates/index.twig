<!DOCTYPE html>
<html lang="en-US">
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta charset="utf-8" />
    <title>{{entry.companyName}}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no, viewport-fit=cover" />
    <meta name="referrer" content="origin-when-cross-origin" />
<script src="https://kit.fontawesome.com/17c05eded0.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="./index.css" />

</head>
<body>
<div class="app">
<div class="header">
    <div class="nav">

        <div class="logoMenuIcon">
            <a href="#" class="logoContainer">
                <div class="logo">
                    <i class="fab fa-xing-square fa-4x" ></i>

                    <div class="companyName">
                    {% set companyName = entry.companyName|split(' ') %}

                        <h4>{{[companyName[0], companyName[1]]|join(' ')}}</h4>
                        <p>{{[companyName[2], companyName[3]]|join(' ')}}</p>

                    </div>
                </div>
            </a>
            <div class="menuIcon">Menu</div>
        </div>

        <div class="menu">
            <div class="menuLinks">
                {% for link in craft.entries.section('navigation').limit(5).all() %}
                    <a href={{link.toLink}}>{{link.title}}</a>
                {% endfor %}
            </div>
            
            {% set navButton = craft.entries.section('navigation').last() %}
            <div class="menuActions">
                <a href={{navButton.toLink}}>
                    <button>{{navButton}}</button>
                </a>
                <Search />
            </div>
        </div>
    </div>

    <div class="cta">
        <div class="ctaMessage">
            {% set ctaMessage = entry.callToAction | replace(',', ',,') | split(', ')  %}
            {% for msg in ctaMessage %}
                <h1>
                {# This if/else condition allows the last line separated by the last comma to be styled differently #}
                {% if loop.last == false %}
                    {{msg}}<br />
                {% elseif loop.last == true %}
                    <span>{{msg}}</span>
                {% endif %}
                </h1>
            {% endfor %}
        </div>

        <div class="ctaLinks">
            <a href={{ entry.toLink }}>
                <button>{{ entry.buttonText }}</button>
            </a>
            <p>{{ entry.callToActionSubMsg }} <a href={{ entry.contactUsLink }}>{{entry.contactUsMessage}}</a></p>
        </div>
    </div>

    <div class="subMenu">
        <div class="subMenuPrompt">
            <i class="fas fa-user-circle fa-3x"></i>
            <p>How can we help?</p>
        </div>
        <div class="subMenuLinks showSubMenu">
            {% for item in craft.entries.section('submenu') %}
                <a href={{item.subMenuLink}}>{{item.title}}</a>
            {% endfor %}
        </div>
    </div>
</div>

    <div class="mainContent">

        {% for service in craft.entries.section('services').limit(3).all() %}

            <div class="card">
                <div class="cardImage">
                    <img src={{service.serviceImage.one().url}} alt="Team having a meeting"/>
                </div>
                <div class="cardDesc">
                    <h4>{{service.serviceTitle}}</h4>
                {{service.serviceExcerpt}}
                </div>
                <div class="cardButton">
                    <a href={{service.toLink}}><button>{{service.buttonText}}</button></a>
                </div>
            </div>

        {% endfor %}

        </div>
        <footer>
            <div class="contact">
                <div class="phoneEmail">
                    <h1>{{entry.phoneNumber}}</h1>
                    <p>Or send us an email using our <a href="#">contact form</a>.</p>
                </div>
                <div class="spacer"></div>
                <div class="addressSocial">
                    <address>
                        <div>
                            <h4>{{entry.address}}</h4>
                        </div>
                        <p>
                            <a href="#">Get directions</a> to our office.
                        </p>
                    </address>
                    <div class="socialMedia">
                       <a href={{entry.facebook}}><img src="./images/facebook.svg" alt="Facebook Link" /></a>

                       <a href={{entry.twitter}}><img src="./images/twitter.svg" alt="Twitter Link" /></a>

                       <a href={{entry.youtube}}><img src="./images/youtube.svg" alt="YouTube Link" /></a>
                    </div>
                </div>
            </div>
            <div class="copyright">

                {% for item in craft.entries.section('footer') %}
                    {% if loop.first == true %}
                        <p>&copy; {{item.title}} All Rights Reserved.</p>
                    {% elseif loop.last == true %}
                        <p>Website crafted by <a href={{item.toLink}}>{{item.title}}</a></p>
                    {% else %}
                        <p><a href={{item.toLink}}>{{item.title}}</a></p>
                    {% endif %}
                {% endfor %}
            </div>

        </footer>
    </div>

</body>
</html>
